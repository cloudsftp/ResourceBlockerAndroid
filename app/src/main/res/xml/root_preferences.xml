<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/server_settings">
        <EditTextPreference
            app:key="host"
            app:title="@string/host_setting"
            app:defaultValue="localhost"/>
        <EditTextPreference
            app:key="port"
            app:title="@string/port_setting"
            app:defaultValue="5000"/>
    </PreferenceCategory>

</PreferenceScreen>